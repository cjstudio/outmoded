package PPoker;

public class CCard {
	int suit;	//花色
	int rank;	//点数

	public final static int THREE = 1;
	public final static int FOUR = 2;
	public final static int FIVE = 3;
	public final static int SIX = 4;
	public final static int SEVEN = 5;
	public final static int EIGHT = 6;
	public final static int NINE = 7;
	public final static int TEN = 8;
	public final static int JACK = 9;
	public final static int QUEEN = 10;
	public final static int KING = 11;
	public final static int ACE = 12;
	public final static int DEUCE = 13;

	public final static int JOKER = 14;
	public final static int COLOR = 15;
	

	public final static int HEART = 1;	//红桃
	public final static int SPADE = 2;	//黑桃
	public final static int DIAMOND = 3;	//方块
	public final static int CLUB = 4;	//草花
	
	public CCard(){}
	public CCard(int suit,int rank)
	{
		this.setSuit(suit);
		this.setRank(rank);
	}
	
	public void setSuit(int suit)
	{
		if(suit < HEART || suit > CLUB)
			throw new IllegalArgumentException("花色选择出错!!!");
		
		this.suit = suit;
	}
	
	public void setRank(int rank)
	{
		if(rank < THREE || rank > COLOR)
			throw new IllegalArgumentException("点数选择出错!!!");
		
		this.rank = rank;
	}
	
	public void setCard(int suit,int rank)
	{
		this.setSuit(suit);
		this.setRank(rank);
	}
	
	public String getRank()
	{
		switch(this.rank)
		{
			case CCard.THREE: return "3";
			case CCard.FOUR: return "4";
			case CCard.FIVE: return "5";
			case CCard.SIX: return "6";
			case CCard.SEVEN: return "7";
			case CCard.EIGHT: return "8";
			case CCard.NINE: return "9";
			case CCard.TEN: return "10";
			case CCard.JACK: return "J";
			case CCard.QUEEN: return "Q";
			case CCard.KING: return "K";
			case CCard.ACE: return "A";
			case CCard.DEUCE: return "2";
			case CCard.JOKER: return "SJOKER";
			case CCard.COLOR: return "COLOR";
			
			default : return null;
		}
	}
	
	public String getSuit()
	{
		switch(this.suit)
		{
			case CCard.HEART: return "HEART";
			case CCard.SPADE: return "SPADE";
			case CCard.DIAMOND: return "DIAMOND";
			case CCard.CLUB: return "CLUB";
			default : break;
		}
		if(CCard.JOKER == this.rank || CCard.COLOR == this.rank)
			return "JOKER";
		return null;
	}

}
