package PPoker;

public class CPoker 
{
	CCard cards[];
	
	public CPoker()
	{
		int n=0;
		int suit,rank;
		this.cards = new CCard[54];
		for(rank = CCard.THREE ; rank <= CCard.DEUCE ; rank++ )
		{
			for(suit = CCard.HEART; suit<= CCard.CLUB ; );
			{
				System.out.println(rank + " " + suit);
				this.cards[n++]= new CCard(suit, rank);
				System.out.println(this.cards[0].getSuit());
				suit++;
			}
		}
		cards[n++].setRank(CCard.JOKER);
		cards[n++].setRank(CCard.COLOR);
	}
}
